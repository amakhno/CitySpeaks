@using CitySpeaks_samle.Models
@model CitySpeaks_samle.Models.Admin.AdminCategoryList

@{
    ViewBag.Title = "Список категорий";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<p>
    @if (TempData["message"] != null)
    {
        @TempData["message"]
    }
</p>

<div class="table-wrapper">
    <table>
        <thead>
            <tr>
                <th>Название</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ProgramCategories category in Model.Category)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>
                        <a href="@Url.Action("Delete", "Category", new { id = category.CategoryId })">
                            <img src="~/Content/Delete_Icon.png" style="height:20px" alt="" />
                        </a>
                        <a href="@Url.Action("Edit", "Category", new { id = category.CategoryId })">
                            <img src="~/Content/Edit_Icon.png" style="height:20px" alt="" />
                        </a>
                    <td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        @Html.AdminPageLinks(Model.PagingInfo, x => Url.Action("GetNewsList", new { page = x }))
    </div>
    @Html.ActionLink("Добавить категорию", "Create", "Category")
</div>


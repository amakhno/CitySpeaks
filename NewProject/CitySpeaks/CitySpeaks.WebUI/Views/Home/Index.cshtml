@model CitySpeaks.Domain.Models.MainPage
@{
    ViewData["Title"] = "Home Page";
}

<!-- Banner -->

<span class="image main" style="padding-top:2em">
    <img src="@Url.Action("GetMainImage", "MainPage",
                        new { newsId = Model.Id })" alt="" />
</span>
<header>
    <h2>
        @Model.Title
    </h2>
    <p>@Model.Subtitle</p>
</header>
<p> @Html.Raw(Model.Description) </p>

<!-- Section -->
<section>
    <header class="major">
        <h2>Популярные программы</h2>
    </header>
    <div class="posts">
        @*@ViewComponent.Action("GetGridPrograms", "Programs")*@
    </div>
</section>

<!-- Section -->
<section>
    <header class="major">
        <h2>Наша команда</h2>
    </header>
    <div class="features">
        @*@Html.Action("ListOfWorkers", "Home")*@
    </div>
</section>

<section style="width:500px">
    <header class="major">
        <h2>Отзывы</h2>
    </header>
    <div class="features">
        <vc:list-of-review></vc:list-of-review>
    </div>
</section>

@await Component.InvokeAsync("ListOfReview", new { maxPriority = 2, isDone = false })
@section scripts {
    <script>
        $('.owl-carousel').owlCarousel({
            loop: true,
            margin: 10,
            nav: true,
            responsive: {
                0: {
                    items: 1
                }
            }
        })
    </script>
}

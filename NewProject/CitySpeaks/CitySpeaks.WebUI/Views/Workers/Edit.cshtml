@model Worker

@{
    ViewBag.Title = "Редактирование работника";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Edit", "Workers", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <p>
        @if (TempData["message"] != null)
        {
            @TempData["message"]
        }
        @Html.ValidationSummary()
    </p>
    <div class="panel-body">
        @Html.HiddenFor(m => m.Id)
        <div class="form-group">
            @Html.LabelFor(x => x.Name)

            @Html.TextBoxFor(x => x.Name,
                        new { @class = "form-control" })
            @Html.LabelFor(x => x.ShortDescription)
            @Html.TextBoxFor(x => x.ShortDescription,
                        new { @class = "form-control" })
            @Html.LabelFor(x => x.FullDescription)

            @Html.TextAreaFor(x => x.FullDescription, 10, 200,
                        new { @class = "form-control" })
        </div>

        <label>Изображение</label>
        <p><input type="file" name="smallImage" size="40" id="SmallImage"></p>
        @if (Model == null || Model.SmallImage == null)
        {
            <div class="form-control-static">Нет картинки</div>
        }
        else
        {
            <span class="image">
                <img width="288" height="174"
                     src="@Url.Action("GetImage", "Workers", new { workerId = Model.Id })" src />
            </span>
        }

        <label>Большое изображение</label>
        <p><input type="file" name="bigImage" size="40" id="SmallImage"></p>
        @if (Model == null || Model.BigImage == null)
        {
            <div class="form-control-static">Нет картинки</div>
        }
        else
        {
            <span class="image">
                <img width="300"
                     src="@Url.Action("GetBigImage", "Workers",
                        new { workerId = Model.Id })" />
            </span>
        }
    </div>

    <ul class="actions">
        <li><input type="submit" value="Сохранить" class="button big" /></li>
    </ul>
}


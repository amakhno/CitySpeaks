@model List<CitySpeaks_samle.Models.Review>

@{
    ViewBag.Title = "Список отзывов";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<p>
    @if (TempData["message"] != null)
    {
        @TempData["message"]
    }
</p>

<div class="table-wrapper">
    <table>
        <thead>
            <tr>
                <th>Имя</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (CitySpeaks_samle.Models.Review workers in Model)
            {
                <tr>
                    <td>@workers.Name</td>
                    <td>
                        <a href="@Url.Action("Delete", "Review", new { id = workers.Id })">
                            <img src="~/Content/Delete_Icon.png" style="height:20px" alt="" />
                        </a>
                        <a href="@Url.Action("Edit", "Review", new { id = workers.Id })">
                            <img src="~/Content/Edit_Icon.png" style="height:20px" alt="" />
                        </a>
                    <td>
                </tr>
            }
        </tbody>
    </table>
    @Html.ActionLink("Добавить отзыв", "Create", "Review")
</div>


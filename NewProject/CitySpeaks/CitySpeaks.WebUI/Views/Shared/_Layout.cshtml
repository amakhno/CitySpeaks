<!DOCTYPE HTML>

<html>
<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />

    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="~/css/font-awesome.min.css" />

    <link href="~/css/owl-container-reset.css" rel="stylesheet" />
    <link href="~/lib/OwlCarousel2/assets/owl.carousel.css" rel="stylesheet" />
    <link href="~/lib/OwlCarousel2/assets/owl.theme.default.css" rel="stylesheet" />

    <script src="~/js/yandex.js"></script>
</head>
<body>
    <!-- Wrapper -->
    <div id="wrapper">

        <!-- Main -->
        <div id="main">
            <div class="inner">

                <!-- Banner -->
                <section>
                    <header class="major">
                        <div class="logo"><h2>@ViewBag.Title</h2></div>
                        <ul class="icons">
                            <li><a href="https://vk.com/cityspeaks" class="icon fa-vk"><span class="label">vk</span></a></li>
                            <li><a href="https://www.facebook.com/cityspeaks.vrn/" class="icon fa-facebook"><span class="label">facebook</span></a></li>
                            <li><a href="https://www.youtube.com/channel/UCWX4mxhyXdAtodC8pbPpebA" class="icon fa-youtube"><span class="label">youtube</span></a></li>
                        </ul>
                    </header>
                    @RenderBody()
                </section>
            </div>
        </div>

        <!-- Sidebar -->
        <!-- Sidebar -->
        <div id="sidebar">
            <div class="inner">
                <!-- Menu -->
                <nav id="menu">
                    <a style="width:100%" href="@Url.Action("Index", "Home")" class="image">
                        <img style="width:100%" src="@Url.Action("GetLogoImage", "MainPage",
                        new { newsId = 1 })" alt="" />
                    </a>
                    <ul>
                        <li>@Html.ActionLink("Главная", "Index", "Home")</li>
                        <li>@Html.ActionLink("Новости", "GetNewsList", "Home")</li>
                        <li>
                            <span class="opener active">Программы</span>
                            <ul>
                                @*@Html.Action("ListOfCategory", "Home")
                                    @Html.Action("ListOfUnCategory", "Home")*@
                            </ul>

                        </li>
                        <li>
                            @*@Html.ActionLink("Отзывы", "GetReviewList", "Home")</li>
                                @Html.Action("GetListOfCorePages", "CustomPage")*@
                        <li>
                            <span class="opener">О нас</span>
                            <ul>
                                @*@Html.Action("GetListOfPages", "CustomPage")*@
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Написать нам", "Index", "Contact")</li>
                    </ul>
                </nav>

                <!-- Section -->
                <section>
                    <header class="major">
                        <h2>Последняя новость</h2>
                    </header>
                    @*@{Html.RenderAction("LastNews", "Home");}*@
                </section>

                <!-- Section -->
                <section>
                    <header class="major">
                        <h2>Контакты</h2>
                    </header>
                    <ul class="contact">
                        <li class="fa-envelope-o">@Html.ActionLink("mail@cityspeaks.ru", "Index", "Contact")</li>
                        <li class="fa-phone">256-95-02</li>
                        <li class="fa-home">
                            Ленинский пр., 156, оф. 307<br />
                            г. Воронеж
                        </li>
                    </ul>
                </section>

                <!-- Footer -->
                <footer id="footer">
                    <p class="copyright">&copy; @DateTime.Now.Year CitySpeaks. All rights reserved. Design: <a href="https://html5up.net">HTML5 UP</a>.</p>
                </footer>

            </div>
        </div>

    </div>

    <!-- Scripts -->
    <environment include="Development">
        <script src="~/lib/jquery/jquery.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"
                asp-fallback-src="~/lib/jquery/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=">
        </script>
    </environment>
    <script src="~/lib/skel/skel.min.js"></script>
    <script src="~/js/util.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/lib/OwlCarousel2/owl.carousel.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
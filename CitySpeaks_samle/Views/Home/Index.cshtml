<html>
<head>
    <title>CitySpeaks Студия иностранных языков</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <!--[if lte IE 8]><script src="assets/js/ie/html5shiv.js"></script><![endif]-->

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content1/carousel")
    @Scripts.Render("~/bundles/yandex")
    <!--[if lte IE 9]><link rel="stylesheet" href="assets/css/ie9.css" /><![endif]-->
    <!--[if lte IE 8]><link rel="stylesheet" href="assets/css/ie8.css" /><![endif]-->
</head>
<body>
    <!-- Wrapper -->
    <div id="wrapper">

        <!-- Main -->
        <div id="main">
            <div class="inner">

                <!-- Banner -->
                <section style="align-content:center">
                    <!-- Header -->
                    <header style="padding-top:0em" id="header">
                        <div class="logo"><strong>CitySpeaks</strong> Студия иностранных языков</div>
                        <ul class="icons">
                            <li><a href="https://vk.com/cityspeaks" class="icon fa-vk"><span class="label">vk</span></a></li>
                            <li><a href="https://www.instagram.com/city.speaks/" class="icon fa-instagram"><span class="label">youtube</span></a></li>
                            <li><a href="https://www.facebook.com/cityspeaks.vrn/" class="icon fa-facebook"><span class="label">facebook</span></a></li>
                            <li><a href="https://www.youtube.com/channel/UCWX4mxhyXdAtodC8pbPpebA" class="icon fa-youtube"><span class="label">youtube</span></a></li>
                        </ul>
                    </header>

                    <!-- Banner -->

                    <span class="image main" style="padding-top:2em">
                        <img src="@Url.Action("GetMainImage", "MainPage",
                        new { newsId = Model.Id })" alt="" />
                    </span>
                    <header>
                        <h2>
                            @Model.Title
                        </h2>
                        <p>@Model.Subtitle</p>
                    </header>
                    <p> @Html.Raw(Model.Description) </p>

                    <!-- Section -->
                    <section>
                        <header class="major">
                            <h2>Популярные программы</h2>
                        </header>
                        <div class="posts">
                            @Html.Action("GetGridPrograms", "Programs")
                        </div>
                    </section>

                    <!-- Section -->
                    <section>
                        <header class="major">
                            <h2>Наша команда</h2>
                        </header>
                        <div class="features">
                            @Html.Action("ListOfWorkers", "Home")
                        </div>
                    </section>

                    <section style="width:500px">
                        <header class="major">
                            <h2>Отзывы</h2>
                        </header>
                        <div class="features">
                            @Html.Action("ListOfReview", "Home")
                        </div>
                    </section>
                </section>
            </div>
        </div>




        <!-- Sidebar -->
        <div id="sidebar">
            <div class="inner">
                <!-- Menu -->
                <nav id="menu">
                    <a style="width:100%" href="@Url.Action("Index", "Home")" class="image">
                        <img style="width:100%" src="@Url.Action("GetLogoImage", "MainPage",
                        new { newsId = Model.Id })" alt="" />
                    </a>
                    <ul>
                        <li>@Html.ActionLink("Главная", "Index", "Home")</li>
                        <li>@Html.ActionLink("Новости", "GetNewsList", "Home")</li>
                        <li>
                            <span class="opener active">Программы</span>
                            <ul>
                                @Html.Action("ListOfCategory", "Home")
                                @Html.Action("ListOfUnCategory", "Home")
                            </ul>

                        </li>
                        <li>@Html.ActionLink("Отзывы", "GetReviewList", "Home")</li>
                        @Html.Action("GetListOfCorePages", "CustomPage")
                        <li>
                            <span class="opener">О нас</span>
                            <ul>
                                @Html.Action("GetListOfPages", "CustomPage")
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Написать нам", "Index", "Contact")</li>
                    </ul>
                </nav>

                <!-- Section -->
                <section>
                    <header class="major">
                        <h2>Новости</h2>
                    </header>
                    @{Html.RenderAction("LastNews", "Home");}
                </section>

                <!-- Section -->
                <section>
                    <header class="major">
                        <h2>Контакты</h2>
                    </header>
                    <p>
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2473.3856768977234!2d39.26416360100885!3d51.689386970185645!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x413b2f8389826db5%3A0x392e6a97adb1d465!2sProspekt+Leninskiy%2C+151%2C+Voronez%2C+Voronezhskaya+oblast&#39;%2C+394063!5e0!3m2!1sen!2sru!4v1549882568041" width="600" height="450" frameborder="0" style="width:100%; border:0" allowfullscreen></iframe>
                    </p>
                    <ul class="contact">
                        <li class="fa-envelope-o">@Html.ActionLink("mail@cityspeaks.ru", "Index", "Contact")</li>
                        <li class="fa-phone">256-95-02</li>
                        <li class="fa-home">
                            Ленинский пр., 151<br />
                            г. Воронеж
                        </li>
                    </ul>
                </section>

                <!-- Footer -->
                <footer id="footer">
                    <p class="copyright">&copy; @DateTime.Now.Year CitySpeaks. All rights reserved. Design: <a href="https://html5up.net">HTML5 UP</a>.</p>
                </footer>

            </div>
        </div>

    </div>

    <!-- Scripts -->
    @Scripts.Render("~/bundles/main")
    @Scripts.Render("~/bundles/carousel")

</body>
</html>